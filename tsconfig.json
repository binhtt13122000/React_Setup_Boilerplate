{
    "compilerOptions": {
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build/",
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5"
    },
    "exclude": ["node_modules", "build"],
    "include": ["src/"],
}
